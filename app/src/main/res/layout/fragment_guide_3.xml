<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/top"
        android:layout_width="695px"
        android:layout_height="434px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/slg3"
        />


    <ImageView
        android:id="@+id/guide41"
        android:layout_width="680px"
        android:layout_height="380px"
        android:layout_below="@id/top"
        android:layout_centerHorizontal="true"
        android:src="@drawable/guide_3_a"
        />


    <ImageView
        android:id="@+id/guide42"
        android:layout_width="956px"
        android:layout_height="739px"
        android:layout_below="@id/guide41"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-120px"
        android:src="@drawable/guide_3_c"
        />


    <ImageView
        android:layout_width="352px"
        android:layout_height="57px"
        android:layout_below="@id/guide42"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:src="@drawable/ks"
        android:id="@+id/skip"
        />


</RelativeLayout>